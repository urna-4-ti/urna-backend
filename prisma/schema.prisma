generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model User {
  id           String  @id @default(uuid())
  name         String
  role         Roles
  enrollment   String
  email        String  @unique
  hashPassword String
  password     String
  class        Classes
}

model Candidate {
  id               String         @id @default(uuid())
  name             String
  cod              Int            @unique
  picPath          String
  description      String
  politicalPartyId String
  PoliticalParty   PoliticalParty @relation(fields: [politicalPartyId], references: [id], onDelete: Cascade)
}

model PoliticalType {
  id   String @id @default(uuid())
  name String
  cod  Int    @unique

  PoliticalParty PoliticalParty[]
}

model PoliticalParty {
  id              String  @id @default(uuid())
  name            String
  class           Classes
  politicalTypeId String
  photoUrl        String

  politicalType PoliticalType @relation(fields: [politicalTypeId], references: [id])
  candidates    Candidate[]
}

model Government {
  id   String @id @default(uuid())
  cod  Int
  name String
}

enum Roles {
  ADMIN
  VOTER
}

enum Classes {
  TI_1
  TI_2
  TI_3
  TI_4
  TQ_1
  TQ_2
  TQ_3
  TQ_4
  TMA_1
  TMA_2
  TMA_3
  TMA_4
  TA_1
  TA_2
  TA_3
  TA_4
  ADMIN
}
